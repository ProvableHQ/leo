{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Leo",
  "scopeName": "source.leo",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#literals" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.leo",
          "match": "//.*$"
        },
        {
          "name": "comment.block.leo",
          "begin": "/\\*",
          "end": "\\*/",
          "captures": {
            "0": { "name": "punctuation.definition.comment.leo" }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.leo",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.leo",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.leo",
          "match": "\\b(if|else|for|in|return)\\b"
        },
        {
          "name": "keyword.other.leo",
          "match": "\\b(program|import|struct|record|mapping|storage)\\b"
        },
        {
          "name": "keyword.function.leo",
          "match": "\\b(function|transition|inline|script|constructor|async)\\b"
        },
        {
          "name": "storage.type.leo",
          "match": "\\b(let|const)\\b"
        },
        {
          "name": "storage.modifier.leo",
          "match": "\\b(public|private|constant)\\b"
        },
        {
          "name": "keyword.operator.leo",
          "match": "\\b(as)\\b"
        },
        {
          "name": "support.function.builtin.leo",
          "match": "\\b(assert|assert_eq|assert_neq)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.leo",
          "match": "\\b(bool|address|field|group|scalar|signature|string|i8|i16|i32|i64|i128|u8|u16|u32|u64|u128|Future|Fn)\\b"
        },
        {
          "name": "entity.name.type.leo",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.language.boolean.leo",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.none.leo",
          "match": "\\b(none)\\b"
        },
        {
          "name": "constant.numeric.address.leo",
          "match": "\\baleo1[a-z0-9]+\\b"
        },
        {
          "name": "constant.numeric.hex.leo",
          "match": "\\b0x[0-9a-fA-F_]+(?:i8|i16|i32|i64|i128|u8|u16|u32|u64|u128|field|group|scalar)?\\b"
        },
        {
          "name": "constant.numeric.octal.leo",
          "match": "\\b0o[0-7_]+(?:i8|i16|i32|i64|i128|u8|u16|u32|u64|u128)?\\b"
        },
        {
          "name": "constant.numeric.binary.leo",
          "match": "\\b0b[01_]+(?:i8|i16|i32|i64|i128|u8|u16|u32|u64|u128)?\\b"
        },
        {
          "name": "constant.numeric.decimal.leo",
          "match": "\\b[0-9][0-9_]*(?:i8|i16|i32|i64|i128|u8|u16|u32|u64|u128|field|group|scalar)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "match": "\\b(function|transition|inline|script)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?:::\\[|\\()",
          "captures": {
            "1": { "name": "keyword.function.leo" },
            "2": { "name": "entity.name.function.leo" }
          }
        },
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.call.leo" }
          }
        },
        {
          "match": "\\.\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.method.leo" }
          }
        },
        {
          "match": "([A-Z][a-zA-Z0-9_]*)\\s*::\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.type.leo" },
            "2": { "name": "entity.name.function.leo" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.leo",
          "match": "(\\+=|-=|\\*=|/=|%=|\\*\\*=|<<=|>>=|&=|\\|=|\\^=|&&=|\\|\\|=|=)"
        },
        {
          "name": "keyword.operator.comparison.leo",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.leo",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.leo",
          "match": "(\\+|-|\\*\\*|\\*|/|%)"
        },
        {
          "name": "keyword.operator.bitwise.leo",
          "match": "(<<|>>|&|\\||\\^)"
        },
        {
          "name": "keyword.operator.ternary.leo",
          "match": "(\\?|:)"
        },
        {
          "name": "keyword.operator.arrow.leo",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.namespace.leo",
          "match": "::"
        },
        {
          "name": "keyword.operator.range.leo",
          "match": "\\.\\."
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.brackets.round.leo",
          "match": "[()]"
        },
        {
          "name": "punctuation.brackets.square.leo",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.brackets.curly.leo",
          "match": "[{}]"
        },
        {
          "name": "punctuation.separator.comma.leo",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.leo",
          "match": ";"
        },
        {
          "name": "punctuation.accessor.dot.leo",
          "match": "\\."
        },
        {
          "name": "punctuation.definition.annotation.leo",
          "match": "@"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.program-id.leo",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\.aleo\\b"
        },
        {
          "name": "variable.other.locator.leo",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\.aleo/[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.language.leo",
          "match": "\\b(self|block|network)\\b"
        },
        {
          "name": "variable.other.leo",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
